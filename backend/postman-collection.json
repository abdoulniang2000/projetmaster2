					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('authToken', response.access_token);",
									"    pm.collectionVariables.set('user', JSON.stringify(response.user));",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
